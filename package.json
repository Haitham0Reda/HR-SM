{
  "name": "hr-sm",
  "version": "1.0.0",
  "type": "module",
  "main": "server/server.js",
  "scripts": {
    "start": "node server/index.js",
    "server": "nodemon server/index.js",
    "client": "npm run storybook --prefix client",
    "client:apps": "npm run start:both --prefix client",
    "dev": "concurrently --names \"SERVER,HR-APP,PLATFORM\" --prefix-colors \"green,cyan,magenta\" \"npm run server\" \"npm run client:apps\"",
    "dev:apps": "concurrently \"npm run server\" \"npm run client:apps\" ",
    "dev:storybook": "concurrently \"npm run server\" \"npm run client\" ",
    "test": "node --max-old-space-size=8192 --experimental-vm-modules --no-warnings=ExperimentalWarning node_modules/jest/bin/jest.js",
    "test:watch": "node --experimental-vm-modules --no-warnings=ExperimentalWarning node_modules/jest/bin/jest.js --watch",
    "test:report": "node generate-report.js",
    "setup-backups": "node server/scripts/setupDailyBackups.js",
    "test-backup": "node server/scripts/testBackup.js",
    "setup-backup-email": "node server/scripts/updateBackupEmail.js",
    "check-google-api": "node server/scripts/setupGoogleAPI.js",
    "cli": "node server/cli/hr-cli.js",
    "sync-roles": "node server/scripts/syncSystemRoles.js",
    "verify-roles": "node server/scripts/verifySystemRoles.js",
    "seed-attendance": "node server/scripts/seedAttendance.js",
    "create-user-template": "node server/scripts/createBulkUserTemplate.js",
    "test-attendance-integration": "node server/scripts/testAttendanceIntegration.js",
    "migrate-attendance": "node server/scripts/migrateAttendanceData.js",
    "generate-license": "node server/scripts/generateLicenseFile.js",
    "check-hr-core": "node scripts/check-hr-core-boundaries.js",
    "lint": "eslint server/**/*.js",
    "lint:hr-core": "eslint server/modules/hr-core/**/*.js",
    "seed-platform-tenants": "node server/scripts/seedPlatformTenants.js",
    "backup:restructuring": "node server/scripts/backup-restructuring-state.cjs",
    "verify:backup": "node server/scripts/verify-restructuring-backup.js",
    "create-company": "node server/scripts/setupCompanyDatabase.js",
    "list-companies": "node server/scripts/listCompanies.js",
    "backup-company": "node server/scripts/companyBackup.js",
    "backup-all-companies": "node server/scripts/companyBackup.js --all",
    "migrate-to-multitenant": "node server/scripts/migrateToMultiTenant.js",
    "seed-multitenant": "node server/seedMultiTenantSimple.js",
    "test-multitenant": "node server/scripts/testMultiTenant.js",
    "test-connections": "node server/scripts/testConnection.js",
    "show-company-info": "node server/scripts/showCompanyInfo.js",
    "test-platform-companies": "node server/scripts/testPlatformCompanies.js",
    "create-platform-admin": "node server/scripts/createPlatformAdmin.js",
    "test-platform-login": "node server/scripts/testPlatformLogin.js",
    "logs:stats": "node server/scripts/manageCompanyLogs.js stats",
    "logs:list": "node server/scripts/manageCompanyLogs.js list",
    "logs:cleanup": "node server/scripts/manageCompanyLogs.js cleanup-all",
    "logs:archive": "node server/scripts/manageCompanyLogs.js archive",
    "modules:list": "node server/scripts/manageCompanyModules.js list-companies",
    "modules:show": "node server/scripts/manageCompanyModules.js show-modules",
    "modules:enable": "node server/scripts/manageCompanyModules.js enable-module",
    "modules:disable": "node server/scripts/manageCompanyModules.js disable-module",
    "modules:license": "node server/scripts/manageCompanyModules.js generate-license",
    "modules:bulk-enable": "node server/scripts/manageCompanyModules.js bulk-enable",
    "modules:stats": "node server/scripts/manageCompanyModules.js stats",
    "migrate:companies": "node server/scripts/migrateCompaniesToPlatform.js"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
