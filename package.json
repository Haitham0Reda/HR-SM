    "@babel/core": "^7.28.5",
    "@babel/preset-env": "^7.28.5",
    "babel-jest": "^30.2.0",
    "concurrently": "^9.2.1",
    "eslint": "^9.39.2",
    "fast-check": "^4.4.0",
    "jest": "^30.2.0",
    "mongodb-memory-server": "^10.3.0",
    "nodemon": "^3.1.10",
    "supertest": "^7.1.4",
    "test-exclude": "^7.0.1"
  },
  "dependencies": {
    "@fastify/csrf-protection": "^7.1.0",
    "archiver": "^7.0.1",
    "axios": "^1.13.2",
    "bcryptjs": "^3.0.2",
    "chalk": "^5.6.2",
    "commander": "^14.0.2",
    "compression": "^1.8.1",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
