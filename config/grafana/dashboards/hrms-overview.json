{
  "dashboard": {
    "id": null,
    "title": "HRMS Enterprise Overview",
    "tags": ["hrms", "enterprise", "overview"],
    "style": "dark",
    "timezone": "browser",
    "refresh": "30s",
    "time": {
      "from": "now-1h",
      "to": "now"
    },
    "panels": [
      {
        "id": 1,
        "title": "System Status",
        "type": "stat",
        "targets": [
          {
            "expr": "up{job=\"hrms-main-backend\"}",
            "legendFormat": "Main Backend",
            "refId": "A"
          },
          {
            "expr": "up{job=\"hrms-license-server\"}",
            "legendFormat": "License Server",
            "refId": "B"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "thresholds"
            },
            "thresholds": {
              "steps": [
                {
                  "color": "red",
                  "value": 0
                },
                {
                  "color": "green",
                  "value": 1
                }
              ]
            },
            "mappings": [
              {
                "options": {
                  "0": {
                    "text": "DOWN"
                  },
                  "1": {
                    "text": "UP"
                  }
                },
                "type": "value"
              }
            ]
          }
        },
        "gridPos": {
          "h": 4,
          "w": 6,
          "x": 0,
          "y": 0
        }
      },
      {
        "id": 2,
        "title": "Request Rate",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(http_requests_total{job=\"hrms-main-backend\"}[5m])",
            "legendFormat": "Main Backend - {{method}} {{status}}",
            "refId": "A"
          },
          {
            "expr": "rate(http_requests_total{job=\"hrms-license-server\"}[5m])",
            "legendFormat": "License Server - {{method}} {{status}}",
            "refId": "B"
          }
        ],
        "yAxes": [
          {
            "label": "Requests/sec",
            "min": 0
          }
        ],
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 6,
          "y": 0
        }
      },
      {
        "id": 3,
        "title": "Response Time (95th percentile)",
        "type": "graph",
        "targets": [
          {
            "expr": "histogram_quantile(0.95, rate(http_request_duration_seconds_bucket{job=\"hrms-main-backend\"}[5m]))",
            "legendFormat": "Main Backend",
            "refId": "A"
          },
          {
            "expr": "histogram_quantile(0.95, rate(http_request_duration_seconds_bucket{job=\"hrms-license-server\"}[5m]))",
            "legendFormat": "License Server",
            "refId": "B"
          }
        ],
        "yAxes": [
          {
            "label": "Seconds",
            "min": 0
          }
        ],
        "gridPos": {
          "h": 8,
          "w": 6,
          "x": 18,
          "y": 0
        }
      },
      {
        "id": 4,
        "title": "Active Licenses",
        "type": "stat",
        "targets": [
          {
            "expr": "license_active_count",
            "legendFormat": "Active",
            "refId": "A"
          },
          {
            "expr": "license_expired_count",
            "legendFormat": "Expired",
            "refId": "B"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "palette-classic"
            }
          }
        },
        "gridPos": {
          "h": 4,
          "w": 6,
          "x": 0,
          "y": 4
        }
      },
      {
        "id": 5,
        "title": "System Resources",
        "type": "graph",
        "targets": [
          {
            "expr": "100 - (avg(irate(node_cpu_seconds_total{mode=\"idle\"}[5m])) * 100)",
            "legendFormat": "CPU Usage %",
            "refId": "A"
          },
          {
            "expr": "(1 - (node_memory_MemAvailable_bytes / node_memory_MemTotal_bytes)) * 100",
            "legendFormat": "Memory Usage %",
            "refId": "B"
          }
        ],
        "yAxes": [
          {
            "label": "Percentage",
            "min": 0,
            "max": 100
          }
        ],
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 0,
          "y": 8
        }
      },
      {
        "id": 6,
        "title": "Database Connections",
        "type": "graph",
        "targets": [
          {
            "expr": "mongodb_connections_current",
            "legendFormat": "Current Connections",
            "refId": "A"
          },
          {
            "expr": "mongodb_connections_available",
            "legendFormat": "Available Connections",
            "refId": "B"
          }
        ],
        "yAxes": [
          {
            "label": "Connections",
            "min": 0
          }
        ],
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 12,
          "y": 8
        }
      },
      {
        "id": 7,
        "title": "Error Rate",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(http_requests_total{job=\"hrms-main-backend\",status=~\"5..\"}[5m])",
            "legendFormat": "Main Backend 5xx",
            "refId": "A"
          },
          {
            "expr": "rate(http_requests_total{job=\"hrms-license-server\",status=~\"5..\"}[5m])",
            "legendFormat": "License Server 5xx",
            "refId": "B"
          },
          {
            "expr": "rate(license_validation_failures_total[5m])",
            "legendFormat": "License Validation Failures",
            "refId": "C"
          }
        ],
        "yAxes": [
          {
            "label": "Errors/sec",
            "min": 0
          }
        ],
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 0,
          "y": 16
        }
      },
      {
        "id": 8,
        "title": "Redis Cache Performance",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(redis_commands_processed_total[5m])",
            "legendFormat": "Commands/sec",
            "refId": "A"
          },
          {
            "expr": "redis_memory_used_bytes / 1024 / 1024",
            "legendFormat": "Memory Usage (MB)",
            "refId": "B"
          }
        ],
        "yAxes": [
          {
            "label": "Commands/sec",
            "min": 0
          },
          {
            "label": "Memory (MB)",
            "min": 0
          }
        ],
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 12,
          "y": 16
        }
      },
      {
        "id": 9,
        "title": "Active WebSocket Connections",
        "type": "stat",
        "targets": [
          {
            "expr": "websocket_connections_active",
            "legendFormat": "Active Connections",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "thresholds"
            },
            "thresholds": {
              "steps": [
                {
                  "color": "green",
                  "value": 0
                },
                {
                  "color": "yellow",
                  "value": 500
                },
                {
                  "color": "red",
                  "value": 1000
                }
              ]
            }
          }
        },
        "gridPos": {
          "h": 4,
          "w": 6,
          "x": 0,
          "y": 24
        }
      },
      {
        "id": 10,
        "title": "License Validation Rate",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(license_validations_total[5m])",
            "legendFormat": "Validations/sec",
            "refId": "A"
          },
          {
            "expr": "rate(license_validation_cache_hits_total[5m])",
            "legendFormat": "Cache Hits/sec",
            "refId": "B"
          }
        ],
        "yAxes": [
          {
            "label": "Validations/sec",
            "min": 0
          }
        ],
        "gridPos": {
          "h": 8,
          "w": 12,
          "x": 6,
          "y": 24
        }
      },
      {
        "id": 11,
        "title": "Backup Status",
        "type": "stat",
        "targets": [
          {
            "expr": "backup_job_success",
            "legendFormat": "Last Backup",
            "refId": "A"
          },
          {
            "expr": "time() - backup_last_success_timestamp",
            "legendFormat": "Hours Since Last Backup",
            "refId": "B"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {
              "mode": "thresholds"
            },
            "thresholds": {
              "steps": [
                {
                  "color": "green",
                  "value": 0
                },
                {
                  "color": "yellow",
                  "value": 86400
                },
                {
                  "color": "red",
                  "value": 172800
                }
              ]
            },
            "unit": "s"
          }
        },
        "gridPos": {
          "h": 4,
          "w": 6,
          "x": 18,
          "y": 24
        }
      }
    ],
    "templating": {
      "list": []
    },
    "annotations": {
      "list": []
    },
    "schemaVersion": 30,
    "version": 1,
    "links": []
  }
}