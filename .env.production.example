# HRMS Production Environment Configuration
# Copy this file to .env.production and update with your actual values

# Database Configuration
MONGODB_ROOT_PASSWORD=your-super-secure-mongodb-root-password
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/hrms?retryWrites=true&w=majority

# Redis Configuration
REDIS_PASSWORD=your-redis-password-if-enabled
REDIS_URL=redis://localhost:6379

# License Server Configuration
LICENSE_SERVER_API_KEY=your-super-secure-license-server-api-key-change-in-production
LICENSE_SERVER_URL=http://localhost:4000

# Session Configuration
SESSION_SECRET=your-super-secure-session-secret-at-least-32-characters-long

# Security Configuration
CORS_ORIGIN=https://your-domain.com,https://admin.your-domain.com

# Email Configuration (SMTP)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-specific-password
SMTP_FROM=HR System <noreply@your-domain.com>

# AWS Configuration (for backups)
AWS_ACCESS_KEY_ID=your-aws-access-key-id
AWS_SECRET_ACCESS_KEY=your-aws-secret-access-key
AWS_REGION=us-east-1
AWS_S3_BUCKET=hrms-backups-production

# SSL Certificate Paths
SSL_CERT_PATH=/etc/ssl/certs/your-domain.com.crt
SSL_KEY_PATH=/etc/ssl/private/your-domain.com.key

# Monitoring Configuration
GRAFANA_ADMIN_PASSWORD=your-grafana-admin-password

# Domain Configuration
DOMAIN=your-domain.com
ADMIN_DOMAIN=admin.your-domain.com

# Backup Configuration
BACKUP_ENCRYPTION_KEY=your-backup-encryption-key-32-characters-minimum

# Rate Limiting Configuration
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX_REQUESTS=1000
RATE_LIMIT_MAX_REQUESTS_LICENSE=100

# File Upload Configuration
MAX_FILE_SIZE=10485760
UPLOAD_PATH=./uploads

# Logging Configuration
LOG_LEVEL=info
LOG_MAX_SIZE=20m
LOG_MAX_FILES=14d

# Performance Configuration
NODE_OPTIONS=--max-old-space-size=2048

# Health Check Configuration
HEALTH_CHECK_TIMEOUT=5000
HEALTH_CHECK_INTERVAL=30000

# Database Connection Pool Configuration
DB_MAX_POOL_SIZE=100
DB_MIN_POOL_SIZE=5
DB_MAX_IDLE_TIME=30000

# Redis Connection Configuration
REDIS_MAX_RETRIES=3
REDIS_RETRY_DELAY=1000

# License Validation Configuration
LICENSE_VALIDATION_INTERVAL=900000
LICENSE_VALIDATION_TIMEOUT=5000

# Backup Schedule (cron format)
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30

# Monitoring Thresholds
CPU_ALERT_THRESHOLD=80
MEMORY_ALERT_THRESHOLD=85
DISK_ALERT_THRESHOLD=90

# Admin Email for Alerts
ADMIN_EMAIL=admin@your-domain.com

# JWT Configuration for License Server
JWT_ALGORITHM=RS256
JWT_ISSUER=HRSM-License-Server
JWT_EXPIRY=365d