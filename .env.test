# E2E Test Environment Configuration

# Application URLs
HR_APP_URL=http://localhost:3000
PLATFORM_ADMIN_URL=http://localhost:3001
API_URL=http://localhost:5000
LICENSE_SERVER_URL=http://localhost:4000

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/hr-sm-e2e-test
MONGODB_TEST_DB=hr-sm-e2e-test
REDIS_URL=redis://localhost:6379/1

# Test Environment Flag
NODE_ENV=test
IS_TEST_ENVIRONMENT=true

# Authentication
JWT_SECRET=test-jwt-secret-key-for-e2e-testing
JWT_EXPIRES_IN=24h
SESSION_SECRET=test-session-secret-for-e2e

# Email Configuration (Mock)
EMAIL_SERVICE=mock
EMAIL_FROM=test@hrms.com
EMAIL_HOST=localhost
EMAIL_PORT=587
EMAIL_USER=test
EMAIL_PASS=test

# File Upload Configuration
UPLOAD_PATH=./e2e/uploads
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=jpg,jpeg,png,pdf,doc,docx,xls,xlsx

# License Server Configuration
LICENSE_SERVER_PORT=4000
LICENSE_PRIVATE_KEY_PATH=./keys/private.pem
LICENSE_PUBLIC_KEY_PATH=./keys/public.pem

# Test Data Configuration
SEED_TEST_DATA=true
CLEANUP_AFTER_TESTS=true
TEST_USER_PASSWORD=TestPassword123!

# Performance Thresholds
PAGE_LOAD_THRESHOLD=5000
API_RESPONSE_THRESHOLD=2000
DATABASE_QUERY_THRESHOLD=1000

# Logging Configuration
LOG_LEVEL=error
LOG_TO_FILE=false
LOG_TO_CONSOLE=true

# Security Configuration (Relaxed for testing)
CORS_ORIGIN=*
RATE_LIMIT_ENABLED=false
HELMET_ENABLED=false

# Feature Flags for Testing
ENABLE_DEBUG_MODE=true
ENABLE_PERFORMANCE_MONITORING=true
ENABLE_NETWORK_MONITORING=true

# Test Timeouts
DEFAULT_TIMEOUT=10000
PAGE_LOAD_TIMEOUT=30000
API_TIMEOUT=10000

# Browser Configuration
HEADLESS=true
BROWSER=chrome
VIEWPORT_WIDTH=1280
VIEWPORT_HEIGHT=720

# Retry Configuration
TEST_RETRIES=2
NETWORK_RETRIES=3

# Cleanup Configuration
AUTO_CLEANUP=true
CLEANUP_OLDER_THAN_DAYS=1

# Mock Services
MOCK_EMAIL_SERVICE=true
MOCK_FILE_UPLOAD=true
MOCK_EXTERNAL_APIS=true

# Test Reporting
GENERATE_REPORTS=true
REPORT_FORMAT=json,html
SCREENSHOT_ON_FAILURE=true
VIDEO_RECORDING=true

# Multi-tenant Testing
DEFAULT_TEST_TENANT=testcompany
SECONDARY_TEST_TENANT=secondtest

# License Testing
TEST_LICENSE_FEATURES=hr-core,attendance,payroll,vacation
TEST_LICENSE_LIMITS_USERS=100
TEST_LICENSE_LIMITS_STORAGE=10
TEST_LICENSE_LIMITS_API_CALLS=10000